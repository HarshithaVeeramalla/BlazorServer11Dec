@page "/Account/Manage/PersonalData"

@inject IdentityUserAccessor UserAccessor

<PageTitle>Persoonlijke data</PageTitle>

<StatusMessage />
<h3>Persoonlijke data</h3>

<div class="row">
    <div class="col-md-6">
        <p>In uw account staan persoonsgegevens die u aan ons heeft verstrekt. Op deze pagina kunt u die gegevens downloaden of verwijderen.</p>
        <p>
            <strong>Als u deze gegevens verwijdert, wordt uw account inclusief saldo definitief verwijderd. Dit kan niet worden hersteld.</strong>
        </p>
        <div class="input-group">
            
        </div>
        <form action="Account/Manage/DownloadPersonalData" method="post">
            <AntiforgeryToken />
            <div class="input-group">
                <button class="btn btn-success" type="submit"><i class="bi bi-download"></i> Download</button>
                <a href="Account/Manage/DeletePersonalData" class="btn btn-danger"><i class="bi bi-trash3"></i> Verwijderen</a>
            </div>
        </form>
        <p>
        </p>
    </div>
</div>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        _ = await UserAccessor.GetRequiredUserAsync(HttpContext);
    }
}
