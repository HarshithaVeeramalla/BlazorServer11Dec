<StatusMessage Message="@StatusMessage" />
<h3>Herstelcodes</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Bewaar deze codes op een veilige plaats.</strong>
    </p>
    <p>
        Als u uw apparaat kwijtraakt en niet over de herstelcodes beschikt, verliest u de toegang tot uw account.
    </p>
</div>
<div class="row">
    <div class="col-md-12">
        @foreach (var recoveryCode in RecoveryCodes)
        {
            <div>
                <code class="recovery-code">@recoveryCode</code>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }
}
